<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0;netstandard2.1</TargetFrameworks>
    <Title>An extension library to assist with ASP.NET data protection using MySQL</Title>
    <Description>ASP.NET Core Data Protection MySQL library allows you to use MySQL to store keys generated by ASP.NET's Data Protection API.</Description>
    <Summary>ASP.NET Core Data Protection MySQL library allows you to use MySQL to store keys generated by ASP.NET's Data Protection API.</Summary>
    <AssemblyTitle>AspNetCore.DataProtection.MySql</AssemblyTitle>
    <AssemblyName>AspNetCore.DataProtection.MySql</AssemblyName>
    <Product>AspNetCore.DataProtection.MySql</Product>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>mysql;mariadb;mysqlconnector;aspnet;dataprotection</PackageTags>
    <PackageId>AspNetCore.DataProtection.MySql</PackageId>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>AspNetCore.DataProtection.MySql</RootNamespace>
    <Nullable>enable</Nullable>
    <SignAssembly>True</SignAssembly>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MySqlConnector" Version="2.*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="9.0.7" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="8.*" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(MSBuildProjectName).Tests" Key="" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" />
    <None Include="..\..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
