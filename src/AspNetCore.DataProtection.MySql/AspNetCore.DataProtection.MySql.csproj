<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.1</TargetFrameworks>
    <Title>An extension library to assist with ASP.NET data protection using MySQL</Title>
    <Description>ASP.NET Core Data Protection MySQL library allows you to use MySQL to store keys generated by ASP.NET's Data Protection API.</Description>
    <Copyright>Copyright 2023 Andrei Nicholson</Copyright>
    <AssemblyTitle>AspNetCore.DataProtection.MySql</AssemblyTitle>
    <AssemblyName>AspNetCore.DataProtection.MySql</AssemblyName>
    <PackageId>AspNetCore.DataProtection.MySql</PackageId>
    <Authors>Andrei Nicholson</Authors>
    <Product>AspNetCore.DataProtection.MySql</Product>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>mysql;mysqlconnector;aspnet;dataprotection</PackageTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="7.*" />
    <PackageReference Include="MySqlConnector" Version="2.*" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(MSBuildProjectName).Tests" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
